{
  "private": true,
  "name": "vite-react-ts-shadcn-ui-boilerplate",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:package-json": "prettier-package-json -l",
    "lint:prettier": "prettier --check .",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "lint-fix:package-json": "prettier-package-json --write",
    "lint-fix:prettier": "prettier --write .",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-package-json": "^2.8.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
